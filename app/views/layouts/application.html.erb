<!DOCTYPE html>
<html>
  <head>
    <title>Code4Pro</title>
    <%= stylesheet_link_tag "application", media: 'all', "data-turbolinks-track" => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
    <%= csrf_meta_tags %>
  </head>
<body>
 
 <!-- Dropdown Structure -->
<ul id="dropdown1" class="dropdown-content">
  <li><a href="#!">My Profile</a></li>
  <li><a href="#!">My Courses</a></li>
  <li class="divider"></li>
  <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
</ul>

<ul id="dropdown2" class="dropdown-content">
  <li><a href="#!">My Profile</a></li>
  <li><a href="#!">My Courses</a></li>
  <li class="divider"></li>
  <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
</ul>

   <%= render partial: "shared/message" %>


<header>
  <nav class="brown lighten-4 z-depth-2">
  <div class="container">
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo">Logo</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="#">Courses</a></li>
        <% if(!user_signed_in?) %>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <li><%= link_to "Login", new_user_session_path %></li>
        <% else %>
        <!-- Dropdown Trigger -->
      <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">current_user<i class="arrow_drop_down"></i></a></li>
         <% end %>
      </ul>
    </div>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-demo">
        <li><a href="#">Courses</a></li>
        <% if(!user_signed_in?) %>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <li><%= link_to "Login", new_user_session_path %></li>
        <% else %>
        <!-- Dropdown Trigger -->
      <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">current_user<i class="arrow_drop_down"></i></a></li>
         <% end %>
  </ul>
  </header>
    <main>
    <div class="container">
      <%= yield %>
    </div>
    </main>

     <%= render partial: "shared/footer" %>


  </body>


<script>
  $('.sidenav').sidenav();
  $('.button-collapse').sidenav();
  $(".dropdown-trigger").dropdown();
</script>
</html>
